<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>CRUD Alumno</title>
    <!-- NAVIGATION -->
    <link rel="stylesheet" href="https://bootswatch.com/5/superhero/bootstrap.min.css">
  </head>
  <body>

    <!-- navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">CRUD Alumno</a>
    </nav>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-8">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nÂ°</td>
              <td>Nombre</td>
              <td>Apellido</td>
              <td>Matricula</td>
              <td>Carrera</td>
              <td>Id_materia</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].nombre %></td>
                  <td><%= data[i].apellido %></td>
                  <td><%= data[i].matricula %></td>
                  <td><%= data[i].carrera %></td>
                  <td><%= data[i].id_materia %></td>
                  <td>
                    <a href="/update/<%= data[i].id_alumno %>" class="btn btn-info">Editar</a>
                    <a href="/delete/<%= data[i].id_alumno %>" class="btn btn-danger">Eliminar</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="nombre" placeholder="Nombre" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="apellido" placeholder="Apellido" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="matricula" placeholder="Matricula" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="carrera" placeholder="Carrera" class="form-control">
            </div>
            <div class="form-group">
              <input type="text" name="id_materia" placeholder="Id_materia" class="form-control">
            </div>
  
            <button type="submit" class="btn btn-primary">
              guarda alumno
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

</body>
</html>